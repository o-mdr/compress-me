#!/bin/bash

# script/bootstrap: Install dependencies that the application requires 
#                   for building and running.

set -e

cd "$(dirname "$0")/.."

echo "==> Installing build tools..."
sudo apt-get -y install python3 python3-pip python3-setuptools python3-wheel \
                ninja-build

echo "==> Installing clang tools..."
sudo apt-get -y install clang-format clang-tidy

echo "==> Installing python dependencies..."
pip3 install --user meson

echo "==> Reloading profile file"
. ~/.profile

echo "==> Setting up meson environment"
meson setup builddir

echo "Bootstraping is done"
